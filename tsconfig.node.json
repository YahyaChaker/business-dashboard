{
  "compilerOptions": {
    "composite": true,
    "skipLibCheck": true,
    "module": "ESNext",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "noEmit": false,
    "outDir": "./dist/node",
    "declaration": true,
    "target": "ES2022",
    "lib": ["ES2020", "DOM"],
    "strict": true,
    "types": ["node"],
    "forceConsistentCasingInFileNames": true
  },
  "include": ["vite.config.ts"]
}

